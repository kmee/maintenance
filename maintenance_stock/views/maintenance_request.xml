<odoo>

    <record model="ir.ui.view" id="maintenance_request_form_view">
        <field name="name">maintenance.request.form (in maintenance_stock)</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">
            <field name="equipment_id" position="after">
                <field name="lot_id"/>
            </field>
            <div class="oe_right" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button type="object" name="action_view_pickings" icon="fa-wrench" string="Ver Pickings" class="oe_stat_button"/>
                </div>
            </div>

            <header position="inside">
                <button name="action_return_from_maintenance" type="object" string="Return to use"/>
            </header>
        </field>
    </record>

