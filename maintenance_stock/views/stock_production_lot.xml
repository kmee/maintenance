<odoo>

    <record model="ir.ui.view" id="stock_production_lot_form_view">
        <field name="name">stock.production.lot.form (in maintenance_stock)</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="idealcare_sale_rental.idealcare_stock_production_lot_form_view"/>
        <field name="arch" type="xml">
            <sheet position="before">
                <header>
                    <field name="available_maintenance" invisible="1"/>
                    <button type="object" name="action_maintenance"
                            string="Enviar para manutenção"
                            attrs="{'invisible': [('available_maintenance', '=', False)]}"/>
                </header>
            </sheet>
            <div name="button_box" position="inside">
                <button name="action_view_maintenances" type="object" class="oe_stat_button" icon="fa-wrench">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="maintenances_count" widget="statinfo" nolabel="1"/>
                        </span>
                        <span class="o_stat_text">Maintenance Requests</span>
                    </div>
                </button>
            </div>
        </field>
    </record>


    <record model="ir.ui.view" id="stock_production_lot_form_simple_view">
        <field name="name">stock.production.lot.form.simple (in maintenance_stock)</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="idealcare_sale_rental.idealcare_stock_production_lot_form_simple_view"/>
        <field name="arch" type="xml">
            <sheet position="before">
                <header>
                    <field name="available_maintenance" invisible="1"/>
                    <button type="object" name="action_maintenance"
                            string="Enviar para manutenção"
                            attrs="{'invisible': [('available_maintenance', '=', False)]}"/>
                </header>
            </sheet>

            <div position="before">
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_maintenances" type="object" class="oe_stat_button" icon="fa-wrench">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="maintenances_count" widget="statinfo" nolabel="1"/>
                            </span>
                            <span class="o_stat_text">Maintenance Requests</span>
                        </div>
                    </button>
                </div>
            </div>
        </field>
    </record>

